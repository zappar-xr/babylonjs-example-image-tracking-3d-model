{
    "compilerOptions": {
      "target": "ES6",
      "module": "esnext",
      "moduleResolution": "node",
      "outDir": "./lib",
      "lib": ["es2020", "dom"],
      "strict": true,
      "esModuleInterop": true,
      "rootDir": "./src",
      "noImplicitUseStrict": true,
      "alwaysStrict": false,
      "types": [
        "babylonjs",
        "babylonjs-materials"
      ]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
